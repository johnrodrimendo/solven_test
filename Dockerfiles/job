FROM public.ecr.aws/x1q7o9g5/openjdk:8
FROM public.ecr.aws/x1q7o9g5/tomcat:8.5

COPY . /app
USER root
RUN chmod 755 /app/Scripts
RUN chmod 755 /app/Job/target
WORKDIR /app
RUN cp Job/target/bin/worker Job/target/bin/worker.sh
RUN chmod 755 Job/target/bin/worker.sh
RUN ["chmod", "+x", "Job/target/bin/worker.sh"]

ENTRYPOINT ["Job/target/bin/worker.sh"]