FROM public.ecr.aws/x1q7o9g5/openjdk:8
FROM public.ecr.aws/x1q7o9g5/tomcat:8.5

COPY . /app
USER root
RUN chmod 755 /app/Scripts
RUN chmod 755 /app/Schedule/target
WORKDIR /app
RUN cp Schedule/target/bin/worker Schedule/target/bin/worker.sh
RUN chmod 755 Schedule/target/bin/worker.sh
RUN ["chmod", "+x", "Schedule/target/bin/worker.sh"]

ENTRYPOINT ["Schedule/target/bin/worker.sh"]


